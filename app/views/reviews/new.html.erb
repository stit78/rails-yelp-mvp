<h1>Add a new review to <%= @restaurant.name.capitalize %></h1>

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <% if @review.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <div class="form-group">
      <%= f.label :rating %>
      <%= f.select(:rating, [0, 1, 2, 3, 4, 5], {}, {}) %>
    </div>

      <%= f.submit "Add a new review", class: "btn btn-primary" %>
  <% end %>
</div>

<br>
<%= link_to 'Back to list', restaurant_path(@restaurant) %>
